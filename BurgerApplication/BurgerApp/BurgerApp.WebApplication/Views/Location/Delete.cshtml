@model Location

<partial name="_Notification" />



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center">Are you sure you want to delete this?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4 mb-3">
                    @Html.DisplayNameFor(model => model.LocationName)
                </dt>
                <dd class="col-sm-8 mb-3">
                    @Html.DisplayFor(model => model.LocationName)
                </dd>
                <dt class="col-sm-4 mb-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-8 mb-3">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-4 mb-3">
                    @Html.DisplayNameFor(model => model.OpensAt)
                </dt>
                <dd class="col-sm-8 mb-3">
                    @Html.DisplayFor(model => model.OpensAt)
                </dd>
                <dt class="col-sm-4 mb-3">
                    @Html.DisplayNameFor(model => model.ClosesAt)
                </dt>
                <dd class="col-sm-8 mb-3">
                    @Html.DisplayFor(model => model.ClosesAt)
                </dd>
            </dl>
            <form asp-action="DeletePOST" class="mt-4 text-end">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" style="width:150px" /> 
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
                </div>
            </form>
     
        </div>
    </div>
</div>
