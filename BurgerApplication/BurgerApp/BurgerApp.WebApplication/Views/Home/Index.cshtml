

 @model IEnumerable<Location>


<partial name="_Notification" />
<h1>Our Locations</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12 text-end">
            <a asp-controller="Location" asp-action="Create" class="btn btn-primary">
                Create new Location
            </a>
        </div>

    </div>

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Opens At</th>
            <th>Closes At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.LocationName
                </td>
                <td>
                    @obj.Address
                </td>
                <td>
                    @obj.OpensAt.ToString("HH:mm")
                </td>
                <td>
                    @obj.ClosesAt.ToString("HH:mm")
                </td>

                <td>

                    <div class="d-flex justify-content-end w-75">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-controller="Location" asp-action="Edit" asp-route-id="@obj.Id">
                                Edit
                            </a>
                            <a class="btn btn-primary" asp-controller="Location" asp-action="Delete" asp-route-id="@obj.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>



                </td>
            </tr>
        }



    </tbody>

</table>
